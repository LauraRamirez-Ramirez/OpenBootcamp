
public class Coche {

    public int puertas = 4;
    
    public void addPuerta (int adicion){
        this.puertas += adicion;
    }
    
    public static void main(String[] args) {
        
        Coche miCoche = new Coche();
        miCoche.addPuerta(1);
        System.out.println("El coche tiene " +miCoche.puertas +" puertas.");
    
    } 
    
}
